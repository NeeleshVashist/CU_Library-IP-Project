<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nvkepler.cu">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/cu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignInActivity" />

        <activity android:name=".BaseActivity" />

        <activity android:name=".FragmentsActivity" />

        <activity
            android:name=".IssueActivity"
            android:label="@string/I_R" />

        <activity
            android:name=".BooksActivity"
            android:label="@string/BooksInfo" />

        <activity
            android:name=".StudentInfoActivity"
            android:label="@string/StuInfo" />
    </application>

</manifest>